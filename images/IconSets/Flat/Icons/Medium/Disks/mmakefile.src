include $(SRCDIR)/config/aros.cfg

ICONS := CDROM_Amiga Harddisk_Amiga Harddisk_Linux Harddisk_MacOS Harddisk_Windows

#MM- themes-flat-icons-clean : themes-flat-icons-disks-clean
#MM- themes-flat-icons : themes-flat-icons-disks
%build_icons mmake=themes-flat-icons-disks icons=$(ICONS) \
             fmt=iff dir=$(AROS_CONTRIB)/Icons/iff/Disks

#MM
iconset-flat-icons-aros-livecd :
	@$(ILBMTOICON) $(SRCDIR)/$(CURDIR)/CDROM_AROS.info.src $(SRCDIR)/$(CURDIR)/CDROM_AROS.iff $(AROSDIR)/disk.info

#MM
iconset-flat-icons-aros-linux-system :
	@$(ILBMTOICON) $(SRCDIR)/$(CURDIR)/AROSHarddisk_Linux.info.src $(SRCDIR)/$(CURDIR)/AROSHarddisk_Linux.png $(AROSDIR)/disk.info

#MM
iconset-flat-icons-aros-windows-system :
	@$(ILBMTOICON) $(SRCDIR)/$(CURDIR)/AROSHarddisk_Windows.info.src $(SRCDIR)/$(CURDIR)/AROSHarddisk_Windows.png $(AROSDIR)/disk.info

#MM
iconset-flat-icons-aros-darwin-system :
	@$(ILBMTOICON) $(SRCDIR)/$(CURDIR)/AROSHarddisk_MacOS.info.src $(SRCDIR)/$(CURDIR)/AROSHarddisk_MacOS.png $(AROSDIR)/disk.info


